<mvc:View
	controllerName="com.demosapui5.demosapui5.controller.Panel"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0">
	<Page showNavButton="true" navButtonPress="onNavBack" title="{i18n>Fragmentos}" titleAlignment="Center">
	<headerContent>
		<core:Fragment fragmentName="com.demosapui5.demosapui5.view.fragment.HeaderContent" type="XML"/>
	</headerContent>
	<Panel
		headerText="{i18n>Ingreso de texto}"
		class="sapUiResponsiveMargin"
		width="auto">
		<content>
			<Button
				id="helloDialogButton"
				text="{i18n>Visualizar}"
				press="onOpenDialog"
				class="sapUiSmallMarginEnd"/>
			
			<core:Fragment fragmentName="com.demosapui5.demosapui5.view.Input" type="XML"/>
		</content>
	</Panel>
	</Page>
</mvc:View>