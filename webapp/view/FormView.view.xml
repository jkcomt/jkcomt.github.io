<mvc:View 
	controllerName="com.demosapui5.demosapui5.controller.FormView"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0">
    <Page showNavButton="true" navButtonPress="onNavBack" title="{i18n>CRUD}" titleAlignment="Center">
	<headerContent>
		<core:Fragment fragmentName="com.demosapui5.demosapui5.view.fragment.HeaderContent" type="XML"/>
	</headerContent>
        <content>
		<core:Fragment fragmentName="com.demosapui5.demosapui5.view.fragment.Form" type="XML"/>
        </content>
		  <footer>
            <OverflowToolbar>
			<ToolbarSpacer />
			<Button text="Submit" icon="sap-icon://save" type="Success" press="onSubmit"/>
            <Button text="Reset" icon="sap-icon://reset" type="Reject" press="onReset" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>